<div class="container">
    <div class="row">
        <h1 class="center-align">Eat some burgers!</h1>
        <div class="divider"></div>
    </div>
    <div class="row">
        <div class="col s4">
            <h2 class="center-align">Burgers still to eat:</h2>
            {{!-- burger list --}}
            <ol class="center-align">
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{id}}
                    {{burger_name}}
                    {{devoured}}
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        {{!-- button list --}}
        <div class="col s4">
            <ol class="center-align">
                {{#each burgers}}
                {{#unless devoured}}
                <li><button class="devour" id={{id}}>Devour it!</button></li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        {{!-- Devour It! list --}}
        <div class="col s4">
            <h2 class="center-align">Burgers already eaten:</h2>
            <ol class="center-align">
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{id}}
                    {{burger_name}}
                    {{devoured}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <div class="divider"></div>
    <div class="row center-align">
        <div class="col s4"></div>
        <div class="col s4">
            <form>
                <input type="text" id="burger" name="burger"></input>
                <button id="submit">Submit</button>
                <p>Enter a burger you want to eat! Click the "Submit" button.</p>
            </form>
        </div>
        <div class="col s4"></div>
    </div>
    <div class="row center-align">
        <div class="col s4"></div>
        <div class="col s4">
            <button id="clearAll">Clear All</button>
        </div>
        <div class="col s4"></div>
    </div>
</div>